@{
    ViewData["Title"] = "Details";
    var cat = ViewBag.Cat;
}

<div class="row">
    <div class="col-6 col-md-6">
        <img src=@cat.ImageUrl class="img-thumbnail" alt="cat-@cat.Id" />
    </div>
    <div class="col-6 col-md-6">
        <h2>@cat.Name</h2>
        <p>
            <span class="font-weight-bold">Age:</span>
            <span>@cat.Age</span>
        </p>
        <p>
            <span class="font-weight-bold">Breed:</span>
            <span>@cat.Breed</span>
        </p>
        <p>
            <a href="#" class="btn btn-success">Edit</a>
            <a href="/cat/delete/@cat.Id" class="btn btn-danger">Delete</a>
            <a href="/" class="btn btn-warning">Home</a>
        </p>
    </div>
</div>
